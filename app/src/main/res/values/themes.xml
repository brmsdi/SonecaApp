<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SonecaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowBackground">@color/light_background</item>
    </style>
    <style name="styleEditText">
        <item name="android:background">@drawable/rounded_edit_text_light</item>
        <item name="android:paddingTop">@dimen/padding_edit_text</item>
        <item name="android:paddingBottom">@dimen/padding_edit_text</item>
        <item name="android:paddingStart">@dimen/padding_edit_text_start</item>
        <item name="android:paddingEnd">@dimen/padding_edit_text_end</item>
        <item name="android:drawableTint">@color/soft_yellow</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
    </style>
    <style name="styleLabelForm">
        <item name="android:textColor">@color/dark_background</item>
        <item name="android:paddingTop">@dimen/label_padding_top</item>
        <item name="android:paddingBottom">@dimen/label_padding_bottom</item>
    </style>
    <style name="toggleDaysOfWeek">
        <item name="android:layout_height">@dimen/toggle_days_of_week_layout_height</item>
        <item name="android:layout_width">@dimen/toggle_days_of_week_layout_width</item>
        <item name="android:background">@drawable/round_toggle_button</item>
    </style>
    <style name="dialogColor">
        <item name="android:background">@color/light_background</item>
    </style>
    <style name="styleSpinner">
        <item name="android:popupBackground">@color/light_background</item>
    </style>
    <style name="styleIcon">
        <item name="android:tint">@color/purple_500</item>
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
    </style>
    <style name="buttonStyle">
        <item name="android:textColor">@color/purple_700</item>
    </style>
    <style name="cardTextStyle">
        <item name="android:textColor">@color/light_background</item>
    </style>
</resources>